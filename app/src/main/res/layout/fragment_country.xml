<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrand"
    android:layoutDirection="rtl"
    tools:context=".fragments.CountryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/txt_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="کشور مورد نظر را انتخاب کنید: "
                    android:textColor="@color/textColor1"
                    android:textSize="20dp"

                    android:textStyle="bold" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txt_country"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:padding="10dp"
                    android:spinnerMode="dialog"
                    android:textDirection="ltr"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/spinner"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="آمار 24 ساعت گذشته: "
                    android:textColor="@color/textColor1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/numbers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txt1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        app:cardBackgroundColor="#FA1010"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/img_Patients"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="8dp"
                                app:srcCompat="@drawable/patient1" />

                            <TextView
                                android:id="@+id/txt_patient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_Patients"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="مبتلایان امروز:"
                                android:textColor="@color/textColor1"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.github.premnirmal.textcounter.CounterView
                                android:id="@+id/txt_patient_number"
                                android:layout_below="@id/txt_patient"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/open_sans_bold"
                                app:autoStart="true"
                                app:startValue="0"
                                app:incrementValue="100"
                                app:timeInterval="5"
                                app:type="integer"
                                android:textColor="@color/textColor1"
                                android:textSize="18sp" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#000000"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/img_death"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="8dp"
                                app:srcCompat="@drawable/death" />

                            <TextView
                                android:id="@+id/txt_death"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_death"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="فوت شدگان: "
                                android:textColor="#FF0000"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.github.premnirmal.textcounter.CounterView
                                android:id="@+id/txt_death_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_death"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/open_sans_bold"
                                app:autoStart="true"
                                app:startValue="0"
                                app:incrementValue="10"
                                app:timeInterval="1"
                                app:type="integer"
                                android:textColor="#FF0000"
                                android:textSize="18sp" />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/numbers">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="آمار کلی کرونا: "
                            android:textColor="@color/textColor1"
                            android:textStyle="bold"
                            android:textSize="24sp" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/patient_all"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_below="@id/txt_all"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#FA1010"
                            app:cardCornerRadius="16sp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp">

                                <ImageView
                                    android:id="@+id/img_Patients_all"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/patient" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20sp"
                                    android:layout_toLeftOf="@id/img_Patients_all"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:text="مبتلایان :"
                                    android:textColor="@color/textColor1"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_patient_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left"
                                    android:text="5555545"
                                    android:textColor="@color/textColor1"
                                    android:textSize="18sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/recovered_all"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_below="@id/patient_all"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#2ADA16"
                            app:cardCornerRadius="16sp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp">

                                <ImageView
                                    android:id="@+id/img_recovered_all"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/recovery" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20sp"
                                    android:layout_toLeftOf="@id/img_recovered_all"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:text="بهبود یافتگان :"
                                    android:textColor="@color/textColor1"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_recovered_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left"
                                    android:text="5555545"
                                    android:textColor="@color/textColor1"
                                    android:textSize="18sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_below="@id/recovered_all"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="16sp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp">

                                <ImageView
                                    android:id="@+id/img_death_all"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/death1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20sp"
                                    android:layout_toLeftOf="@id/img_death_all"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:text="فوت شدگان :"
                                    android:textColor="#FF0000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txt_death_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:fontFamily="@font/open_sans_bold"
                                    android:gravity="left"
                                    android:text="5555545"
                                    android:textColor="#FF0000"
                                    android:textSize="18sp" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_centerInParent="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/connect"
        android:visibility="visible"
        android:layout_below="@id/spin_kit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="connecting..."
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>